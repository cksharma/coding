using namespace std;


class TheShuttles {
public:
	int getLeastCost(vector <int> cnt, int baseCost, int seatCost) {
		int max = *max_element(cnt.begin(), cnt.end());
		int ans = 1 << 30;
		for (int x = 1; x <= max; x++) {
			int cost = 0;
			for (int j = 0; j < cnt.size(); j++) {
				int item = cnt[j];
				int mycost = baseCost + x * seatCost;
				mycost += ceil(item * 1. / cnt.size());
				cost += mycost;
			}
			if (cost < ans) {
				ans = cost;
			}
		}
		return ans;
	}
};


